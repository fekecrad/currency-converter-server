{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es7", "dom"],
		"allowJs": true,
		"sourceMap": true,
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false, //bcs. of unused params in handlers
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"]
}
